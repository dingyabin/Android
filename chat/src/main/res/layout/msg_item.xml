<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/time"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


            <!--左边的消息-->
    <LinearLayout
        android:id="@+id/left_layout"
        android:orientation="horizontal"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/left_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/other" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/left_msg_content"
            android:gravity="left"
            android:layout_gravity="left|center_vertical"
            android:textSize="17sp"
            android:background="@drawable/left_bg"/>
    </LinearLayout>


                <!--右边的消息-->
    <LinearLayout
        android:id="@+id/right_layout"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/right_msg_content"
            android:gravity="left"
            android:layout_gravity="right|center_vertical"
            android:textSize="17sp"
            android:background="@drawable/right_bg"/>

        <ImageView
            android:id="@+id/right_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/self" />
    </LinearLayout>


</LinearLayout>